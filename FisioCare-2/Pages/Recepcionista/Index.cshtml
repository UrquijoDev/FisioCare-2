@page
@model FisioCare_2.Pages.Recepcionista.IndexModel
@{
    Layout = "_Layout";
}
<main class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12 col-md-8">
            <p class="text-muted">Panel de gestión de citas</p>
        </div>
    </div>
    @if (TempData["Success-creditos"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success-creditos"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    @if (TempData["Success-Cita-Recepcionista"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success-Cita-Recepcionista"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    <div class="row g-4">
        <!-- Próximas citas -->
        <div class="col-12 col-lg-6">
            <div class="card border-primary rounded-4 shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-calendar-check me-2"></i>Próximas citas
                </div>
                <div class="card-body">
                    @if (Model.CitasProximas != null && Model.CitasProximas.Any())
                    {
                        <div style="max-height: 150px; overflow-y: auto;">
                            <ul class="list-group list-group-flush">
                                @foreach (var cita in Model.CitasProximas)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-start flex-wrap">
                                        <div>
                                            <strong>@cita.Usuario.FirstName @cita.Usuario.LastName</strong><br />
                                            <small class="text-muted">@cita.HoraInicio.ToString("dddd, dd MMM yyyy - hh:mm tt")</small><br />
                                            <span class="text-muted">@cita.Servicio.Nombre</span><br />
                                            <span class="text-muted"><i class="bi bi-person"></i> @cita.Fisioterapeuta.FirstName @cita.Fisioterapeuta.LastName</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay citas próximas.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Lista de pacientes para reagendar -->
        <div class="col-12 col-lg-6">
            <div class="card border-info rounded-4 shadow-sm h-100">
                <div class="card-header bg-info text-dark d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-people me-2"></i>Pacientes</span>
                </div>
                <div class="card-body">
                    <input type="text" id="busquedaPaciente" class="form-control mb-3" placeholder="Buscar por nombre..." onkeyup="filtrarPacientes()" />
                        <div style="max-height: 150px; overflow-y: auto; overflow-x">
                            <ul class="list-group" id="listaPacientes">
                                @foreach (var paciente in Model.TodosLosPacientes.DistinctBy(p => p.Id))
                                {
                                <li class="list-group-item d-flex justify-content-between align-items-start flex-column flex-sm-row paciente-item"
                                    data-nombre="@($"{paciente.FirstName} {paciente.LastName}".ToLower())"
                                    data-correo="@paciente.Email.ToLower()">

                                    <div style="min-width: 0;" class="flex-grow-1 me-2">
                                        <strong>@paciente.FirstName @paciente.LastName (@paciente.Email)</strong><br />
                                        <small class="text-muted">Créditos: @paciente.CreditosDisponibles</small>
                                    </div>

                                    <div class="d-flex flex-wrap gap-2 mt-2 mt-sm-0">
                                        <a class="btn btn-outline-primary btn-sm" href="/Recepcionista/Appointment/Paso1?idPaciente=@paciente.Id&idFisioterapeuta=@Model.IdFisioterapeuta">Agendar</a>
                                        <a class="btn btn-outline-primary btn-sm" href="/Recepcionista/GestionCreditos?idPaciente=@paciente.Id">Créditos</a>
                                    </div>
                                </li>

                                }
                            </ul>
                        </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Historial de citas -->
    <div class="row mt-4 g-4">
        <div class="col-12">
            <div class="card rounded-4 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-clock-history me-2"></i>Historial de citas
                    </div>
                    <div class="w-auto">
                        <select class="form-select form-select-sm" id="filtroHistorial" onchange="filtrarHistorial()">
                            <option value="Todos">Todos</option>
                            <option value="Completada">Completadas</option>
                            <option value="Cancelada">Canceladas</option>
                            <option value="Pendiente">Pendientes</option>
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.HistorialCitas.Any())
                    {
                        <div class="table-responsive" style="max-height: 180px; overflow-y: auto;">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Paciente</th>
                                        <th>Servicio</th>
                                        <th>Fisioterapeuta</th>
                                        <th>Estado</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cita in Model.HistorialCitas)
                                    {
                                        <tr data-estado="@cita.Estado">
                                            <td>@cita.HoraInicio.ToString("dd/MM/yyyy")</td>
                                            <td>@cita.HoraInicio.ToString("HH:mm")</td>
                                            <td>@cita.Usuario.FirstName @cita.Usuario.LastName</td>
                                            <td>@cita.Servicio.Nombre</td>
                                            <td>@cita.Fisioterapeuta.FirstName @cita.Fisioterapeuta.LastName</td>
                                            <td>
                                                <span class="badge @(cita.Estado == "Cancelada" ? "bg-danger" :
                                                                 cita.Estado == "Completada" ? "bg-success" :
                                                                 "bg-warning text-dark")">
                                                    @cita.Estado
                                                </span>
                                            </td>
                                            <td>
                                                @if (cita.Estado == "Pendiente")
                                                {
                                                    <a class="btn btn-warning btn-sm" href="/Recepcionista/Appointment/Edit?id=@cita.Id">Modificar</a>
                                                    <a class="btn btn-danger btn-sm" href="/Recepcionista/Appointment/Cancelar?id=@cita.Id">Cancelar</a>
                                                    <a class="btn btn-success btn-sm" href="/Recepcionista/Appointment/Completada?id=@cita.Id">Completada</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay historial disponible.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</main>
<script src="~/js/Fisioterapeuta/Fisioterapeuta-Filtros.js"></script>
<script src="~/js/Fisioterapeuta/Fisioterapeuta-Notificaciones-CitaAgendada.js"></script>
