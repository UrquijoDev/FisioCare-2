@page
@model FisioCare_2.Pages.Paciente.Appointment.Paso4Model
@{
    Layout = "_Layout";
}
<div class="container">
    <header>
        <h1>Clínica de Fisioterapia Salud Integral</h1>
        <p class="subtitle">Selecciona el horario para tu cita</p>
    </header>

    <div class="booking-steps">
        <div class="step"> <div class="step-number">1</div> <div class="step-label">Terapeuta</div></div>
        <div class="step"> <div class="step-number">2</div> <div class="step-label">Servicio</div></div>
        <div class="step"> <div class="step-number">3</div> <div class="step-label">Fecha</div></div>
        <div class="step active"> <div class="step-number">4</div> <div class="step-label">Horario</div></div>
    </div>

    <form method="post">
        <div class="booking-form">
            <h2>Horarios disponibles para el día @Model.Fecha.ToString("dd/MM/yyyy")</h2>
            <div class="time-select">
                @if (Model.HorariosDisponibles != null && Model.HorariosDisponibles.Any())
                {
                    <select class="form-control" id="horario" name="HoraSeleccionada" required>
                        <option value="" disabled selected>Selecciona un horario</option>
                        @foreach (var horario in Model.HorariosDisponibles)
                        {
                            <option value="@horario">@horario</option>
                        }
                    </select>
                }
                else
                {
                    <p>No hay horarios disponibles para la fecha seleccionada.</p>
                }
            </div>

            <div class="navigation-buttons">
                <button type="submit" class="btn-primary">Siguiente</button>
            </div>
        </div>
    </form>
</div>

<style>
    .time-select {
        margin-top: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>
