@page
@model FisioCare_2.Pages.Paciente.Appointment.Paso2Model
@{
    Layout = "_Layout";
}

<div class="container">
    <header>
        <h1>Clínica de Fisioterapia Salud Integral</h1>
        <p class="subtitle">Agenda tu cita de manera rápida y sencilla</p>
    </header>

    <div class="booking-steps">
        <div class="step" data-step="1">
            <div class="step-number">1</div>
            <div class="step-label">Terapeuta</div>
        </div>
        <div class="step active" data-step="2">
            <div class="step-number">2</div>
            <div class="step-label">Servicio</div>
        </div>
        <div class="step" data-step="3">
            <div class="step-number">3</div>
            <div class="step-label">Fecha y Hora</div>
        </div>
        <div class="step" data-step="4">
            <div class="step-number">4</div>
            <div class="step-label">Confirmación</div>
        </div>
    </div>

    <div class="booking-form">
        <div>
            <h2>Selecciona el servicio que necesitas</h2>

            <form method="get">
                <!-- OJO: el name es en minúscula -->
                <input type="hidden" name="fisioterapeutaId" value="@Model.FisioterapeutaId" />

                <div class="form-group">
                    <label for="service">Servicio de fisioterapia</label>
                    <select id="service" name="servicioId" required>
                        <option value="">-- Selecciona un servicio --</option>
                        @foreach (var servicio in Model.Servicios)
                        {
                            <option value="@servicio.Id">@servicio.Nombre @servicio.CreditosNecesarios</option>
                        }
                    </select>
                    <div class="error-message" id="service-error" style="display:none;">Por favor selecciona un servicio</div>
                </div>

                <div class="navigation-buttons">
                    <!-- El formulario ya pasa la información con el asp-page y parámetros -->
                    <button type="submit" class="btn-primary" asp-page="Paso3" asp-route-fisioterapeutaId="@Model.FisioterapeutaId" asp-route-servicioId="@Request.Query["servicioId"]">Siguiente</button>
                </div>
            </form>
        </div>
    </div>
</div>



<script src="~/js/cita.js"></script>
<script>
    function validateServiceSelection() {
        const selected = document.getElementById("service").value;
        if (!selected) {
            document.getElementById("service-error").style.display = "block";
            return false;
        }
        return true;
    }
</script>
