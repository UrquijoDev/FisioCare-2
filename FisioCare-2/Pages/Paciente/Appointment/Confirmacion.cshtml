@page
@model FisioCare_2.Pages.Paciente.Appointment.ConfirmacionModel
@{
    Layout = "_Layout";
}

<div class="container">
    <header>
        <h1>Clínica de Fisioterapia Salud Integral</h1>
        <p class="subtitle">Confirma los detalles de tu cita</p>
    </header>

    <div class="booking-steps">
        <div class="step">
            <div class="step-number">1</div>
            <div class="step-label">Terapeuta</div>
        </div>
        <div class="step">
            <div class="step-number">2</div>
            <div class="step-label">Servicio</div>
        </div>
        <div class="step">
            <div class="step-number">3</div>
            <div class="step-label">Fecha y Hora</div>
        </div>
        <div class="step active">
            <div class="step-number">4</div>
            <div class="step-label">Confirmación</div>
        </div>
    </div>

    <form method="post">
        <div class="booking-form">
            <h2>Resumen de tu cita</h2>

            <div class="summary">
                <div class="summary-item">
                    <span class="summary-label">Fisioterapeuta:</span>
                    <span class="summary-value">@Model.NombreFisioterapeuta</span>
                </div>
                <div class="summary-item">
                    <span class="summary-label">Servicio:</span>
                    <span class="summary-value">@Model.NombreServicio</span>
                </div>
                <div class="summary-item">
                    <span class="summary-label">Fecha:</span>
                    <span class="summary-value">@Model.FechaFormateada</span>
                </div>
                <div class="summary-item">
                    <span class="summary-label">Hora:</span>
                    <span class="summary-value">@Model.HoraFormateada</span>
                </div>
            </div>

            <div class="navigation-buttons">
                <a asp-page="./Paso4"
                   asp-route-fisioterapeutaId="@Model.FisioterapeutaId"
                   asp-route-servicioId="@Model.ServicioId"
                   asp-route-fecha="@Model.Fecha.ToString("yyyy-MM-dd")"
                   class="btn-secondary">Anterior</a>

                <button type="submit" class="btn-primary">Confirmar cita</button>
            </div>
        </div>
    </form>
</div>
