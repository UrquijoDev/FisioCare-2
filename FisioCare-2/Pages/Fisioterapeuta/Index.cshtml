@page
@model FisioCare_2.Pages.Fisioterapeuta.IndexModel
@{
    Layout = "_Layout";
}
<main class="container-fluid p-4">
    
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12 col-md-8">
            <p class="text-muted">Panel de gestión de citas</p>
        </div>
        <div class="col-12 col-md-4 d-flex align-items-center justify-content-end">
            <span class="badge bg-info text-dark">
                <i class="bi bi-calendar-event me-2"></i>Citas activas: @Model.CitasActivas.Count()
            </span>
        </div>
    </div>
    @if (TempData["Success-Cita-Fisioterapeuta"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success-Cita-Fisioterapeuta"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    @if (TempData["Error-Creditos-Fisioterapeuta"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error-Creditos-Fisioterapeuta"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    @if (TempData["Error-Hora-Fisioterapeuta"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-clock-fill me-2"></i>
            @TempData["Error-Hora-Fisioterapeuta"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    <!-- Sección de citas -->
    <div class="row g-4">
        <!-- Próximas citas -->
        <div class="col-12 col-lg-6">
            <div class="card border-primary rounded-4 shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-calendar-check me-2"></i>Próximas citas
                </div>
                <div class="card-body">
                    @if (Model.CitasProximas != null && Model.CitasProximas.Any())
                    {
                        <div style="max-height: 150px; overflow-y: auto;">
                        <ul class="list-group list-group-flush">
                            @foreach (var cita in Model.CitasProximas)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-start flex-wrap">
                                    <div>
                                        <strong>@cita.Usuario.FirstName @cita.Usuario.LastName</strong><br />
                                        <small class="text-muted">@cita.HoraInicio.ToString("dddd, dd MMM yyyy - hh:mm tt")</small><br />
                                        <span class="text-muted">@cita.Servicio.Nombre</span>
                                    </div>
                                    <div class="mt-2 mt-md-0">
                                        <a class="btn btn-sm btn-success me-1" href="/Recepcionista/Appointment/Completada?id=@cita.Id">Completar</a>
                                        <a class="btn btn-sm btn-danger" href="/Recepcionista/Appointment/Cancelar?id=@cita.Id">Cancelar</a>
                                        <a class="btn btn-warning btn-sm" href="/Recepcionista/Appointment/Edit?id=@cita.Id">Modificar</a>
                                    </div>
                                </li>
                            }

                        </ul>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay citas próximas.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Lista de pacientes para reagendar -->
        <div class="col-12 col-lg-6">
            <div class="card border-info rounded-4 shadow-sm h-100">
                <div class="card-header bg-info text-dark d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-people me-2"></i>Pacientes</span>
                </div>
                <div class="card-body">
                    <input type="text" id="busquedaPaciente" class="form-control mb-3" placeholder="Buscar por nombre..." onkeyup="filtrarPacientes()" />

                    @if (Model.todasLasCitas.Any())
                    {
                        var pacientesUnicos = Model.todasLasCitas
                        .GroupBy(c => c.Usuario.Id)
                        .Select(g => g.First())
                        .ToList();
                        <div style="max-height: 150px; overflow-y: auto;">
                            <ul class="list-group" id="listaPacientes">
                                @foreach (var cita in pacientesUnicos)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center paciente-item"
                                        data-nombre="@($"{cita.Usuario.FirstName} {cita.Usuario.LastName}".ToLower())">
                                        <div>
                                            <strong>@cita.Usuario.FirstName @cita.Usuario.LastName</strong> <br />
                                            <small class="text-muted">Última cita: @cita.HoraInicio.ToString("dd/MM/yyyy - hh:mm tt")</small><br />
                                            <small class="text-muted">Creditos: @cita.Usuario.CreditosDisponibles</small>
                                        </div>
                                        <div>
                                            <a class="btn btn-outline-primary btn-sm me-2" href="/Fisioterapeuta/Appointment/Paso1?idPaciente=@cita.Usuario.Id">Reagendar</a>
                                            <a class="btn btn-outline-secondary btn-sm" href="#">Gestionar Créditos</a>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay pacientes registrados.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Historial de citas -->
    <div class="row mt-4 g-4">
        <div class="col-12">
            <div class="card rounded-4 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-clock-history me-2"></i>Historial de citas
                    </div>
                    <div class="w-auto">
                        <select class="form-select form-select-sm" id="filtroHistorial" onchange="filtrarHistorial()">
                            <option value="Todos">Todos</option>
                            <option value="Completada">Completadas</option>
                            <option value="Cancelada">Canceladas</option>
                            <option value="Pendiente">Pendientes</option>
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.HistorialCitas != null && Model.HistorialCitas.Any())
                    {
                        <div class="table-responsive" style="max-height: 180px; overflow-y: auto;">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Paciente</th>
                                        <th>Servicio</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cita in Model.HistorialCitas)
                                    {
                                        <tr data-estado="@cita.Estado">
                                            <td>@cita.HoraInicio.ToString("dd/MM/yyyy")</td>
                                            <td>@cita.HoraInicio.ToString("HH:mm")</td>
                                            <td>@cita.Usuario.FirstName @cita.Usuario.LastName</td>
                                            <td>@cita.Servicio.Nombre</td>
                                            <td>
                                                <span class="badge @(cita.Estado == "Cancelada" ? "bg-danger" :
                                                                 cita.Estado == "Completada" ? "bg-success" :
                                                                 "bg-warning text-dark")">
                                                    @cita.Estado
                                                </span>
                                            </td>
                                            <td>
                                                @if (cita.Estado == "Pendiente")
                                                {
                                                    <a class="btn btn-warning btn-sm" href="/Fisioterapeuta/Appointment/Edit?id=@cita.Id">Modificar</a>
                                                    <a class="btn btn-danger btn-sm" href="/Fisioterapeuta/Appointment/Cancelar?id=@cita.Id">Cancelar</a>
                                                    <a class="btn btn-success btn-sm" href="/Fisioterapeuta/Appointment/Completada?id=@cita.Id">Completada</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay historial disponible.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</main>
<script src="~/js/Fisioterapeuta/Fisioterapeuta-Filtros.js"></script>
<script src="~/js/Fisioterapeuta/Fisioterapeuta-Notificaciones-CitaAgendada.js"></script>