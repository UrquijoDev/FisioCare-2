@page
@model FisioCare_2.Pages.Admin.PaquetesCreditosConf.CreateModel
@{
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Nuevo Paquete de Créditos</h2>

        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Nombre</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="PaqueteCredito.Nombre" />
                    <span asp-validation-for="PaqueteCredito.Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Precio</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="PaqueteCredito.Precio" />
                    <span asp-validation-for="PaqueteCredito.Precio" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Cantidad de Créditos</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="PaqueteCredito.CantidadCreditos" />
                    <span asp-validation-for="PaqueteCredito.CantidadCreditos" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Descripción</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="PaqueteCredito.Descripcion"></textarea>
                    <span asp-validation-for="PaqueteCredito.Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/PaquetesCreditosConf/Index" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
