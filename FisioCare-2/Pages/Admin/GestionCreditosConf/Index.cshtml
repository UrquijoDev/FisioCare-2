@page
@model FisioCare_2.Pages.Admin.GestionCreditosConf.IndexModel
@{
    Layout = "_LayoutAdmin";
}
<!-- Mensajes de éxito o error -->
@if (TempData["Error-creditos"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
else if (TempData["Success-creditos"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<section class="projects-section card">
    <div class="card-header">
        <h2>Gestión de Créditos</h2>
        <p class="subtitle">Seleccione un paciente y un paquete de créditos para asignar</p>
    </div>
    <div class="row mb-4">
        <div class="col">
            <h4>Asignar Créditos a un Paciente</h4>
            <form method="post" asp-page-handler="AsignarCreditos" onsubmit="return validarPaciente();">
                <div class="form-group">
                    <label for="PacienteSearch">Buscar Paciente (por nombre o correo)</label>
                    <input type="text" class="form-control" id="PacienteSearch" list="PacientesList" placeholder="Ej. Juan Pérez (juan@mail.com)" required />
                    <datalist id="PacientesList">
                        @foreach (var paciente in Model.Pacientes)
                        {
                            <option value="@paciente.FirstName (@paciente.Email)" data-id="@paciente.Id"></option>
                        }
                    </datalist>
                    <input type="hidden" name="pacienteId" id="PacienteId" />
                    <small class="text-danger d-none" id="PacienteError">Debe seleccionar un paciente válido de la lista.</small>
                </div>

                <div class="form-group">
                    <label for="PaqueteId">Seleccionar Paquete de Créditos</label>
                    <select class="form-control" id="PaqueteId" name="paqueteId" required>
                        <option value="">Seleccione un paquete</option>
                        @foreach (var paquete in Model.PaquetesCredito)
                        {
                            <option value="@paquete.Id">@paquete.Nombre - @paquete.CantidadCreditos Créditos</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success mt-3">Asignar Créditos</button>
                </div>
            </form>
        </div>
    </div>
</section>
<script src="~/js/Admin/Administrador-Filtro-Creditos.js"></script>
