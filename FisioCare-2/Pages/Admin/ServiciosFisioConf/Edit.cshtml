@page
@model FisioCare_2.Pages.Admin.ServiciosFisioConf.EditModel
@{
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Editar Servicio</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <!-- Campo oculto para el ID del servicio -->
            <input type="hidden" asp-for="Servicio.Id" />

            <!-- Campo de Nombre del Servicio -->
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Nombre del Servicio</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Servicio.Nombre" />
                    <span asp-validation-for="Servicio.Nombre" class="text-danger"></span>
                </div>
            </div>

            <!-- Campo de Precio -->
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Precio</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Servicio.PrecioReferencia" type="number" step="0.01" />
                    <span asp-validation-for="Servicio.PrecioReferencia" class="text-danger"></span>
                </div>
            </div>

            <!-- Campo de Duración -->
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Duración (formato hh:mm:ss)</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Servicio.Duracion" type="text" placeholder="hh:mm:ss" />
                    <span asp-validation-for="Servicio.Duracion" class="text-danger"></span>
                </div>
            </div>


            <!-- Campo de Créditos Necesarios -->
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Créditos Necesarios</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Servicio.CreditosNecesarios" type="number" />
                    <span asp-validation-for="Servicio.CreditosNecesarios" class="text-danger"></span>
                </div>
            </div>

            <!-- Campo de Descripción -->
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Descripción</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Servicio.Descripcion"></textarea>
                    <span asp-validation-for="Servicio.Descripcion" class="text-danger"></span>
                </div>
            </div>

            <!-- Campo de Características -->
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Características</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="FeaturesAsString" rows="5" placeholder="Escribe las características separadas por coma"></textarea>
                    <span class="text-muted">Por favor, separa cada característica con una coma.</span>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="row mb-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/ServiciosFisioConf/Index" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
