@page
@model FisioCare_2.Pages.Admin.UsuariosT.CreateModel
@{
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Nuevo Usuario</h2>

        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Nombre</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Usuario.FirstName" />
                    <span asp-validation-for="Usuario.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Apellido</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Usuario.LastName" />
                    <span asp-validation-for="Usuario.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Usuario.Email" />
                    <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Contraseña</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Imagen</label>
                <div class="col-sm-8">
                    <input class="form-control" type="file" asp-for="ImageFile" />
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Rol</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="SelectedRole" asp-items="Model.Roles"></select>
                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/UsuariosT/Index" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
